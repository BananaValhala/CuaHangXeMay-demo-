<Window x:Class="LVTN_V0._1._1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LVTN_V0._1._1"
        mc:Ignorable="d"
        Title="Login" Height="298" Width="542"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Content="Log in" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <TextBlock Text="User name" Width="200"/>
        <TextBox Name="txtuser" Width="200"/>
        <TextBlock Text="Password" Width="200"/>
        <PasswordBox Name="txtpass" Width="200"/>
        <Label/>
        <Label/>
        <WrapPanel HorizontalAlignment="Center" Width="72">
            <Button Name="btnsignin" Content="Sign in" Click="btnsignin_Click" Width="72"/>
            <Label/>
        </WrapPanel>
    </StackPanel>
</Window>
